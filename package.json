{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run cleanup && run-s \"build:*\"",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:node": "cross-env NODE_ENV=production node scripts/server-build.mjs",
    "build:remix": "remix build",
    "cleanup": "rimraf .cache ./build ./public/build ./dist ./app/styles",
    "dev": "npm run docker && npm run cleanup && npm run build:css && remix build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:node": "cross-env NODE_ENV=development nodemon",
    "dev:remix": "remix watch",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remix-run/express": "^1.7.2",
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "pg-promise": "^10.12.0",
    "pusher": "^5.1.1-beta",
    "pusher-js": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^3.3.0",
    "replicache": "^11.2.0",
    "replicache-react": "^2.10.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "esbuild-plugin-node-externals": "^0.3.0",
    "eslint": "^8.23.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
